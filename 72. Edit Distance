class Solution {
public:
    int minDistance(string word1, string word2) {
        
        int m = word1.size(); 
        int n = word2.size(); 
        if(n<1) return m; 
        if(m<1) return n; 
        
        vector<vector<int>> table(n+1,vector<int> (m+1,0)); 
        
        
        for(int i =0; i < (n+1); i++)
        {    
          table[i][0] = i; 
        }
        
        for(int j =0; j < (m+1); j++)
        {    
          table[0][j] = j; 
        }
        
        for(int i =1; i < (n+1); i++)
        {    
            for(int j=1; j < (m+1); j++)
            {
                int ct = (word2[i-1] != word1[j-1]); 
                
                table[i][j] = min(
                                    min(
                                        (ct + table[i-1][j-1]), 
                                        (table[i-1][j] +1)
                                       ),
                                       (table[i][j-1] + 1)  
                                 );
                
                
            }
        }
        
        return table[n][m]; 
    }
};
